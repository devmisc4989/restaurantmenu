ul.collapsible.popout(data-collapsible='accordion')
  li
    .collapsible-header()
      .row
        legend.col-sm-12(style='margin-bottom: 10px;') Event Date
      .static-body
        .row
          .col-sm-8.col-sm-offset-2.text-center
            .inner-addon.left-addon
              i.fa.fa-calendar.pull-right(aria-hidden='true', style='font-size: 20px; margin-top: 6px; margin-bottom: -50px; padding-right: 20px;')
              input.form-control(type='text', value="{{vm.selected_date}}", style='font-size: 20px; font-weight: 300; text-align:center; border: none;')
        br
    .collapsible-body
      div(flex="75" style='margin: auto;')
        .pickerdate
          input(ng-model="vm.selected_date" data-booking-date-picker style="display: none;")

        div(align="center")
          md-button.md-raised.md-primary(
          ng-click="vm.update_date()"
          ) UPDATE DATE