                .dropdown-menu.dropdown-menu-profile
                    .lock-screen-container
                        a.lock-screen-btn(ui-sref="page.lock") LOCK SCREEN
                            i.lock-icon.icon-lock-open
                    .user-info-container
                        .user-photo {{user.first_name.charAt(0).toUpperCase()+user.last_name.charAt(0).toUpperCase()}}
                        .user-full-name {{user.first_name}} {{user.last_name}}
                    .item-list-container
                        ul
                            li
                                a(ui-sref="app.profile") Profile
                            li
                                a(href='', ng-click='$logout()') Sign out

