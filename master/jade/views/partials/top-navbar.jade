// START Top Navbar
nav.navbar.topnavbar(role='navigation' )
    // START navbar header
    .navbar-header.visible-xs
        // Nav bar Title
        .mobile-nav-title-wrapper
            h3.navbar-title {{ vm.title }}
    // END navbar header

    // START Nav wrapper
    .nav-wrapper
        // Nav bar Title
        .nav-title-wrapper.vertical-mid-container.hidden-xs
            h3.navbar-title.vertical-mid-inner.hidden-xs {{ vm.title }}
        // START Left navbar
        ul.nav.navbar-nav
            li.hidden-xs
                // Button used to collapse the left sidebar. Only visible on tablet and desktops
                a.vertical-mid-container(href='', trigger-resize="", ng-click="app.layout.isCollapsed = !app.layout.isCollapsed")
                    em.vertical-mid-inner.icon-menu-topbar
            li.mobile-menu-toggle.visible-xs
                // Button used to collapse the left sidebar. Only visible on tablet and desktops
                a.vertical-mid-container(href='', trigger-resize="", ng-click="app.layout.isCollapsed = !app.layout.isCollapsed")
                    em.vertical-mid-inner.icon-menu-topbar

            // Full-screen button //.visible-lg
            li.hidden-xs
                a.vertical-mid-container(href='', toggle-fullscreen)
                    em.vertical-mid-inner.icon-full-screen
        // END Left navbar

        // START Right Navbar
        ul.nav.navbar-nav.navbar-right
            li
                a.vertical-mid-container(ng-init="vm.showToastDrawer = false;" ng-click="vm.showToastDrawer = !vm.showToastDrawer")
                    em.vertical-mid-inner.icon-notification
                notification-container(ng-show="vm.showToastDrawer")

            // Help Button
            li
                a.vertical-mid-container(href='', ng-click='')
                    em.vertical-mid-inner.icon-support

            // User Profile button
            li.dropdown.dropdown-list(uib-dropdown='')
                a.vertical-mid-container.dropdown-toggle(href='', ng-click='' uib-dropdown-toggle='' aria-haspopup='' aria-expanded='')
